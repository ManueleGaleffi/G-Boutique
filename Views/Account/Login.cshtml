@model Login
@{
    ViewData["Title"] = "Login";
}

<style>
    body {
        background-color: #f7f7f7;
    }

    .login-container {
        background-color: #ffffff;
        border-radius: 10px;
        box-shadow: 0px 0px 20px 0px rgba(0,0,0,0.1);
        padding: 40px;
        max-width: 400px;
        margin: auto;
        margin-top: 50px;
    }

    .login-title {
        text-align: center;
        color: #333333;
    }

    .login-form {
        margin-top: 20px;
    }

    .login-submit-btn {
        background-color: #4CAF50;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        cursor: pointer;
        width: 100%;
        margin-top: 20px;
    }

    .login-submit-btn:hover {
        background-color: #45a049;
    }

    .login-forgot-password {
        text-align: right;
        margin-top: 10px;
    }
</style>

<div class="login-container">
    <h2 class="login-title">@ViewData["Title"]</h2>

    <form asp-controller="Account" asp-action="Login" method="post" class="login-form" novalidate>
        <div asp-validation-summary="All" class="text-danger"></div> <!-- Aggiornato asp-validation-summary a "All" -->

        <div class="form-group">
            <label asp-for="Email" class="control-label">Email</label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Password" class="control-label">Password</label>
            <input asp-for="Password" type="password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-group">
            <div class="checkbox">
                <label asp-for="RememberMe">
                    <input asp-for="RememberMe" /> @Html.DisplayNameFor(m => m.RememberMe)
                </label>
            </div>
        </div>

        <button type="submit" class="login-submit-btn">Login</button>

        @if (ViewData["ErrorMessage"] != null)
        {
            <div class="text-danger">@ViewData["ErrorMessage"]</div>
        }
    </form>
</div>
